<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetWise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A12B7</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BudgetWise.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BudgetWise.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BudgetWise.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">#5737A9</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="DatePickerExpense" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/expense_color</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButton</item>
    </style>

    <style name="DatePickerIncome" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/income_color</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButton</item>
    </style>

    <style name="DatePickerButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>